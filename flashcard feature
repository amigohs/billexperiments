<body>
  <div id="app">
    <div id="flashcard" class="flashcard">Loading...</div>
    <div class="buttons">
      <button class="button button-up" onclick="swipeUp()">ðŸ”¼ Swipe Up</button>
      <div class="row-buttons">
        <button class="button button-left" onclick="swipeLeft()">ðŸ‘ˆ Swipe Left</button>
        <button class="button button-right" onclick="swipeRight()">Swipe Right ðŸ‘‰</button>
      </div>
    </div>
  </div>

  <script>
    const flashcards = [
      "Python is a high-level programming language.",
      "The capital of France is Paris.",
      "E=mc^2 is Einstein's mass-energy equivalence formula.",
      "Water boils at 100Â°C under standard pressure.",
    ];

    let currentIndex = 0;

    // Load the first flashcard
    const flashcardElement = document.getElementById("flashcard");
    function loadFlashcard() {
      if (currentIndex < flashcards.length) {
        flashcardElement.textContent = flashcards[currentIndex];
      } else {
        flashcardElement.textContent = "You've gone through all the flashcards!";
        document.querySelector(".buttons").style.display = "none";
      }
    }

    // Swipe actions
    function swipeLeft() {
      alert(`You swiped left on: "${flashcards[currentIndex]}"`);
      nextFlashcard();
    }

    function swipeRight() {
      alert(`You swiped right on: "${flashcards[currentIndex]}"`);
      nextFlashcard();
    }

    function swipeUp() {
      alert(`You swiped up on: "${flashcards[currentIndex]}" (Marked as special!)`);
      nextFlashcard();
    }

    function nextFlashcard() {
      currentIndex++;
      loadFlashcard();
    }

    // Initialize the app
    loadFlashcard();
  </script>
</body>
